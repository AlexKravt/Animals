<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_layout_padding"
    android:gravity="center">
    <include
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/inc_box_alert_pay" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/boxBtnPay"
        android:gravity="center">

    <TextView
        android:text="Сумма к оплате"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="16dp"
        android:id="@+id/textView20" />

    <TextView
        android:text="0 руб."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/valueAmount"
        android:gravity="center"
        android:textSize="36sp"
        android:textStyle="normal|bold"
        android:layout_gravity="center"  />

    <TextView
        android:text="Выберите способ оплаты"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:gravity="center"
        android:padding="16dp"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:layout_gravity="center" />

    <ImageButton
        android:layout_height="70dp"
        android:id="@+id/iBtnYaMoney"
        android:scaleType="fitCenter"
        android:elevation="0dp"
        android:layout_width="200dp"
        android:layout_gravity="center"
        android:src="@drawable/yandex_dengi_product_icon_rgb"
        android:background="@drawable/border_shadow" />

    <ImageButton
        android:layout_height="70dp"
        android:id="@+id/iBtnCart"
        android:scaleType="fitCenter"
        android:elevation="0dp"
        android:layout_width="200dp"
        android:layout_gravity="center"
        android:src="@drawable/visa_i_mastercard"
        android:contentDescription=""
        android:background="@drawable/border_shadow"
        android:layout_marginTop="16dp" />
    </LinearLayout>
</LinearLayout>