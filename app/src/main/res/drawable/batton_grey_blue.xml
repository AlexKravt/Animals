<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
<item android:state_pressed="true" >
    <shape android:shape="rectangle"  >
        <corners android:radius="3dip" />
        <stroke android:width="1dip" android:color="#eeeeee" />
        <gradient  android:angle="-90"
            android:startColor="#ff162c35"
            android:endColor="#2c5463"  />
    </shape>
</item>
<item android:state_focused="true">
    <shape android:shape="rectangle"  >
        <corners android:radius="3dip" />
        <stroke android:width="1dip" android:color="#162c35" />
        <solid  android:color="#ff2c5463"/>
    </shape>
</item>
<item >
    <shape android:shape="rectangle"  >
        <corners android:radius="3dip" />
        <stroke android:width="1dip" android:color="#eeeeee" />
        <gradient  android:angle="-90"
            android:startColor="#2c5463"
            android:endColor="#162c35" />
    </shape>
</item>
</selector>