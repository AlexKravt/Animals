<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
<item android:state_pressed="true" >
    <shape android:shape="rectangle"  >
        <corners android:radius="3dip" />
        <stroke android:width="1dip" android:color="#eeeeee" />
        <gradient  android:angle="-90"
            android:startColor="#ffa10c00"
            android:endColor="#d62608"  />
    </shape>
</item>
<item android:state_focused="true">
    <shape android:shape="rectangle"  >
        <corners android:radius="3dip" />
        <stroke android:width="1dip" android:color="#AC2925" />
        <solid  android:color="#D9534F"/>
    </shape>
</item>
<item >
    <shape android:shape="rectangle"  >
        <corners android:radius="3dip" />
        <stroke android:width="1dip" android:color="#eeeeee" />
        <gradient  android:angle="-90"
            android:startColor="#D9534F"
            android:endColor="#AC2925" />
    </shape>
</item>
</selector>